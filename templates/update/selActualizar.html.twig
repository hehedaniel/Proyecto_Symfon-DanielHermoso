{% extends 'home.html.twig' %}

{% block datos %}

  <div>

    <h1>Formulario para seleccionar el producto a actualizar</h1>

    <div>

      <form action="#" method="post" onsubmit="return validarFormulario(document.getElementById('prodActualizar').value)">
        <label>Selecciona el producto a actualizar</label>

        <select id="prodActualizar" name="prodActualizar">
          <option value="0">---</option>
          {% for productos in arrrayProducto %}
              <option value="{{productos.id}}">ID: {{productos.id}} -- Modelo: {{productos.modelo}}</option>
          {% endfor %}
        </select>

        <input type="submit" value="Buscar">
      </form>

    </div>
  </div>

{% endblock %}